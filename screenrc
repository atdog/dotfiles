#hardstatus alwayslastline "%{..G} %=%H %{..Y} %c:%s %{..R} %d/%m/%Y %{.K} Load: %l %{wb}"
#hardstatus alwayslastline "%{R}[ %{w}%1` %{R}]%=%{M}%e%{G}%H %{Y} %c %{R} %d/%m/%Y %{K} Load: %1 %{w}"

