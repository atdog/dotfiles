[
    {
        "shell" : [
        ]
    },
    {
        "defaults": {
            "link": {
                "relink": true
            }
        }
    },
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/bin": "bin",
            "~/.tmux.conf": "config/tmux.conf",
            "~/.vim": "config/vim",
            "~/.vimrc": "config/vimrc",
            "~/.gitconfig": "config/gitconfig",
            "~/.zshrc": "config/zshrc"
        }
    },
    {
        "shell": [
            ["setup/vim.sh", "Installing vim plugin"],
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    }
]
